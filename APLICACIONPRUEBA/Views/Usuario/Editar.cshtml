@model APLICACIONPRUEBA.Models.Usuario
@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="ID_Usuario" />

    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Primer Apellido</label>
        <input asp-for="PrimerApellido" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Segundo Apellido</label>
        <input asp-for="SegundoApellido" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Contraseña</label>
        <input asp-for="Contraseña" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-danger mt-2">@ViewBag.Mensaje</div>
    }
</form>
